# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# Uncomment the following line if you don't like systemctl's auto-paging feature:
# export SYSTEMD_PAGER=

#Aliases
alias vi="vim"
alias cl="clear; clear"
alias cls="cl; ls"
alias napi="python /home/mcqigo/statScripts/napi.py"
alias py="python3"
alias alman="py /home/mcqigo/statScripts/alman.py"
alias terminal="gnome-terminal"
alias notes="xed"
#Functions
function cds() { cd "$@" && ls; }
function clds() { cl; cd "$@" && ls; } 
function dnt() { sudo dnf "$@"; }
function start() { nohup "$@" >/dev/null 2>&1 & disown; }
function extract() {
   if [ -f $1 ] ; then
       case $1 in
           *.tar.bz2)   tar xvjf $1 && cd $(echo $1 | sed 's/.tar.bz2//')    ;;
           *.tar.gz)    tar xvzf $1 && cd $(echo $1 | sed 's/.tar.gz//')    ;;
	   *.tar.xz)	tar xf $1 && cd $(echo $1 | sed 's/.tar/xz//'	;;
           *.bz2)       bunzip2 $1 && cd $(echo $1 | sed 's/.bz2//')    ;;
           *.rar)       unrar x $1 && cd $(echo $1 | sed 's/.rar//')    ;;
           *.gz)        gunzip $1 && cd $(echo $1 | sed 's/.gz//')    ;;
           *.tar)       tar xvf $1 && cd $(echo $1 | sed 's/.tar//')    ;;
           *.tbz2)      tar xvjf $1 && cd $(echo $1 | sed 's/.tbz2//')    ;;
           *.tgz)       tar xvzf $1 && cd $(echo $1 | sed 's/.tgz//')    ;;
           *.zip)       unzip $1 && cd $(echo $1 | sed 's/.zip//')    ;;
	   *.xz)        tar xf $1 && cd $(echo $1 | sed 's/.xz//')    ;;
           *.Z)         uncompress $1 && cd $(echo $1 | sed 's/.Z//')    ;;
           *.7z)        7z x $1 && cd $(echo $1 | sed 's/.7z//')    ;;
           *)           echo "don't know how to extract '$1'..." ;;
       esac
   else
       echo "'$1' is not a valid file!"
   fi
 }

